<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_item_memo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_item_memo_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="취업하기"
        android:textColor="@color/colorCodeMain"
        android:textSize="19dp"
        app:layout_constraintEnd_toStartOf="@+id/fl_item_memo_expand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_item_memo_expand_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_memo_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fl_item_memo_expand">

        <TextView
            android:id="@+id/tv_item_memo_expand_content_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="자료구조,\n알고리즘,\n데이터베이스,\n운영체제"
            android:textSize="18dp"
            android:textColor="@color/colorCodeMain" />

        <TextView
            android:id="@+id/tv_item_memo_expand_content_suffix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="}"
            android:textSize="20dp"
            android:textColor="@color/colorCodeSpecial" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_item_memo_expand"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll_item_memo_edit_inform"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/iv_item_memo_expand_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/custom_round_rectangle_plus" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item_memo_expand_minus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <ImageView
                android:id="@+id/iv_item_memo_expand_minus_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/custom_round_rectangle_minus"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/iv_item_memo_expand_minus_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/custom_round_rectangle_minus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/iv_item_memo_expand_minus_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/colorGrey"
                app:layout_constraintTop_toBottomOf="@id/iv_item_memo_expand_minus_top"
                app:layout_constraintBottom_toTopOf="@id/iv_item_memo_expand_minus_bottom"
                app:layout_constraintStart_toStartOf="@id/iv_item_memo_expand_minus_top"
                app:layout_constraintEnd_toEndOf="@id/iv_item_memo_expand_minus_top" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_item_memo_edit_inform"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_item_memo_expand_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/ll_item_memo_edit_inform_created_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="생성일 : 2020년 7월 7일"
            android:textColor="@color/colorGrey"/>

        <TextView
            android:id="@+id/ll_item_memo_edit_inform_completed_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="종료일 : 2020년 7월 8일"
            android:textColor="@color/colorGrey" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>